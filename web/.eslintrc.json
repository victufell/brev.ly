{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true, 
    "node": true 
  },
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "dist", 
    ".eslintrc.json", 
    "vite.config.ts",
    "node_modules",
    "*.d.ts"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
} 